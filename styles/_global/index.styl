html
  margin: 0
  font-size: 20px

body
  margin: 0
  color: $font-black
  font-size: $font-size
  font-size: $font-size
  font-family: $font-family
  line-height: $text-line-height
  -webkit-font-smoothing: subpixel-antialiased

*
  box-sizing: border-box

  &::selection
    background: $theme-text-selection-color
    color: #f7f7f7

  &::-webkit-scrollbar
    width: 8px
    height: 8px

  &::-webkit-scrollbar-thumb
    background: $light-blue

  &::-webkit-scrollbar-track
    background-color: transparent

a
  color: $theme-link-color
  transition: all 0.2s ease-in-out

  &:hover
    color: $theme-color
    text-decoration: none

h1,
h2,
h3,
h4,
h5,
h6
  position: relative
  margin: 0.2rem 0
  color: lighten($font-color, 15%)
  font-weight: bold

.melody-hr
  position: relative

  hr
    position: relative
    margin: 2rem auto
    width: calc(100% - 4px)
    border: 2px dashed $pale-blue
    background: $white

  &:hover
    &:before
      left: calc(95% - 20px)

  &:before
    position: absolute
    top: -18px
    left: 5%
    z-index: 1
    color: $light-blue
    content: "\f0c4"
    text-decoration: inherit
    font-weight: 900
    font-size: 21px
    font-family: "Font Awesome 5 Free"
    transition: all 1s ease-in-out

table
  overflow: auto
  width: 100%
  border-spacing: 0
  border-collapse: collapse

  thead
    background: alpha($a-link-color, 10%)

  th,
  td
    padding: 0.3rem 0.6rem
    border: 1px solid darken($light-grey, 10%)
    vertical-align: top

#global-layout
  display: flex
  flex-direction: column
  min-height: 100vh

  a
    font-weight: normal

main
  flex: 1 1

  &.open-sidebar
    padding-left: $sidebar-width

  .melody-content
    margin: 0 auto
    width: $content-width

    img
      display: block
      margin: 0 auto
      padding: 4px
      max-width: 100%
      border: 1px solid #eaeefb
      cursor: pointer
      transition: all 0.2s ease-in-out

      &:hover
        box-shadow: $white-shadow

.pull-left
  float: left

.pull-right
  float: right

.text-center
  text-align: center

#toggle-sidebar
  position: fixed
  bottom: $sidebar-icon-top
  left: $sidebar-icon-left
  z-index: 100
  font-size: $sidebar-icon-size
  cursor: pointer

#go-up
  position: fixed
  right: $go-up-right
  bottom: $go-up-bottom
  z-index: 100
  font-size: $sidebar-icon-size
  opacity: 0
  cursor: pointer

@media screen and (max-width: $sm)
  main
    .melody-content
      margin: 0.5rem 1.5rem
      width: auto

@media screen and (min-width: $md)
  main
    .melody-content
      width: $content-large-width
